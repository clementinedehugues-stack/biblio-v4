# Backend environment variables (example)
# Copy to backend/.env for local development. Do NOT commit secrets.

# Render/Production: Set this in the Render dashboard (Environment tab).
# Example (Render internal DB URL; driver will be upgraded to +asyncpg automatically):
# DATABASE_URL=postgresql://<USER>:<PASSWORD>@<HOST>:5432/<DBNAME>

# Local development example (if using a local Postgres):
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/biblio

# JWT secret for signing tokens (must be set in production)
JWT_SECRET_KEY=change_me_in_production

# Optional: customize token settings
# JWT_ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Cloudinary Configuration (REQUIRED for persistent file storage)
# Sign up at https://cloudinary.com/users/register_free (free 25GB)
# Get credentials from https://console.cloudinary.com/settings/account
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Document streaming token TTL (in seconds)
DOCUMENT_STREAM_TOKEN_TTL_SECONDS=300

# Upload limits
PDF_UPLOAD_MAX_BYTES=62914560
GENERATE_THUMBNAILS_ON_UPLOAD=true

# CORS: your frontend origin
# In production on Render, set to your deployed frontend URL
FRONTEND_ORIGIN=http://localhost:5173

# Optional: multiple origins via JSON or comma-separated (takes precedence when set)
# CORS_ALLOW_ORIGINS=["http://localhost:5173","https://bibliotheque-2u2m.onrender.com"]
# or
# CORS_ALLOW_ORIGINS=https://bibliotheque-2u2m.onrender.com, http://localhost:5173

# Optional: allow origin regex (e.g., for LAN dev)
# CORS_ALLOW_ORIGIN_REGEX=http://192\.168\.1\.[0-9]+:5173
